       @* <input type="text" name="EmpName" class="form-control" placeholder="Employee Name" />*@
        <input asp-for="EmpName" class="form-control" placeholder="Employee Name" />
    </div>
    <div class="form-group">
        <label for="EmpSalary"> Employee Salary </label>
      @*  <input type="text" name="EmpSalary" class="form-control" placeholder="Employee Salary" />*@
        <input asp-for="EmpSalary" class="form-control" placeholder="Employee Salary" />
    </div>
