@model ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>


<form action="Create" , method="post">
    <div class="form-group">
        <label for="DeptId"> Department Id</label>
        @* <input type="text" name="DeptId" class="form-control" placeholder="DepartmentId" />*@
        @*  <input asp-for="DeptId" class="form-control" placeholder="DepartmentId" /> *@
        @Html.DropDownList("DeptId", (IEnumerable<SelectListItem>)ViewData["deptBindData"], new { @class = "form-control" })

